{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types"]
    },
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "node_modules/@material-ui/core/styles"
    ],
    "experimentalDecorators": true
  },
  "include": ["./main/**/*", "./types"]
}
